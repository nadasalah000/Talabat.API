@using Talabat.Core
@using Talabat.Core.Entites
@model ProductViewModel

@inject IUnitOfWork unitOfWork
@{
    var Brands = new SelectList(unitOfWork.Reposatory<ProductBrand>().GetAllAsync().Result, "Id", "Name");
    var Types = new SelectList(unitOfWork.Reposatory<ProductType>().GetAllAsync().Result, "Id", "Name");
}

<div class="form-group">
    <label asp-for="Image" class="col-form-label "></label>
    <input asp-for="Image" type="file" class="form-control" accept="images/*" />
</div>


<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input asp-for="Price" class="form-control" type="number" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Brand" class="col-form-label"></label>
    <select class="form-control" asp-for="BrandId" asp-items="Brands">
        <option value="@null">-- Select Brand --</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Type" class="col-form-label"></label>
    <select class="form-control" asp-for="TypeId" asp-items="Types">
        <option value="@null">-- Select Type --</option>
    </select>
</div>
