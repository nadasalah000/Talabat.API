@model IReadOnlyList<ProductBrand>

@{
	ViewData["Title"] = "Index";
}

<h1>All Brand</h1>
@*<a asp-action="Create" class="btn btn-outline-primary m-2">Add New Product</a>*@
<partial name="CreateFormPartialView" model="new ProductBrand()" />

@if (Model.Count() > 0)
{
	<div class="container">
		<table class="table table-hover table-striped table-bordered dt-responsive nowrap">
			<thead class="bg-dark text-white text-center">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var brand in Model)
				{
					<tr>
						<td>@brand.Id</td>
						<td>@brand.Name</td>
						<td>
							<div class=" d-flex">
								<a class="btn text-danger" asp-action="Delete" asp-route-id="@brand.Id"><i class="fas fa-trash"></i></a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

}
else
{
	<div class="mt-3 p-3 alert-warning">
		<h2>There are no Brands!</h2>
	</div>
}
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}



